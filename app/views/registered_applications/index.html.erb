<h1>Registered Applications</h1>
<% if current_user %>
  <% @registered_applications.each do |application| %>
    <div class="col-md-8">
      <table class="table table-striped">
        <tr>
          <th>Application Name</th>
          <th>URL</th>
          <th>Events</th>
          <th>Delete</th>
        </tr>
        <tr>
          <td><%= link_to application.name, application %></td>
          <td><%= link_to application.url, application.url %></td>
          <td><%= link_to "Delete", method: :destroy, data: { confirm: "Are you sure you want to delete this application?"} %></td>
        </tr>
      </table>
    </div>
  <% end %>
<% end %>